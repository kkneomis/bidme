<div class="col-md-6 col-md-offset-3">     
        <h2>Log in</h2>

          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="field">
              <%= f.email_field :email, placeholder:"Enter your email address", autofocus: true, required: "true", class:"form-control" %>
            </div>

      <div class="field">
        <%= f.password_field :password, placeholder:"Enter your password", autocomplete: "off", required: "true", class:"form-control" %>
  </div>

      <div class="actions">
        <%= f.submit "Log in", class:"btn btn-primary" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
</div>